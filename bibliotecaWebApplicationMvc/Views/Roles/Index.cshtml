@model IEnumerable<Microsoft.AspNetCore.Identity.IdentityRole>

<h2>Roles: </h2>

<p>
    <a asp-action="Create" class="btn btn-primary"><i class="fas fa-plus"></i>&nbsp;Crear Rol</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var role in Model)
        {
            <tr>
                <td>
                    @role.Name
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@role.Id" class="btn btn-primary">
                        <i class="bi bi-pencil-square"></i>Edit
                    </a>
                    <form asp-action="Delete" asp-route-id="@role.Id" method="post" class="d-inline delete-form">
                        <button type="button" class="btn btn-danger delete-button">
                            <i class="bi bi-trash-fill"></i>Delete
                        </button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>